/* component/notes.wxss */
@import "../../style/iconfont.wxss";

.notes {
  margin: 10rpx 30rpx;
}

.liuyan {
  width: 100rpx;
  margin: 10rpx;
  border-bottom: var(--themeColor) solid 5rpx;
}

.comments_input {
  width: 100%;
  border: solid #969696 2rpx;
  height: 300rpx;
  margin-bottom: 10rpx;
}

.liuyan text {
  font-size: 30rpx;
}

.input {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.liuyan image {
  width: 30rpx;
  margin-right: 5rpx;
}

.input .sub_liuyan {
  margin: 0 20rpx;
  width: 200rpx;
  height: 75rpx;
  background: var(--themeColor);
  border-radius: 6rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #ffffff;
}