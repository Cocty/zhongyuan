page {
  background-color: #ffffff;
}

.textswiper_wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx auto;
  font-size: large;
  font-weight: 600;
}


.main {
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.main .top-title {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  line-height: 34rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
}

.main .form-item {
  height: 120rpx;
  border-bottom: 1rpx solid #e3e3e3;
  display: flex;
  align-items: center;
}

.main .form-item .left {
  width: 210rpx;
  line-height: 120rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #666666;
}

.main .form-item .right-input {
  width: 480rpx;
  font-size: 32rpx;
  line-height: 120rpx;
  font-weight: 500;
  color: #aaaaaa;
}

.main .form-item .sex-box {
  width: 480rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}

.main .form-item .sex-box .radio-item:nth-child(2) {
  margin-left: 80rpx;
}

.main .form-item .select-box {
  display: flex;
}

.main .form-item:last-child {
  border-bottom: 0rpx solid #e3e3e3;
}

.bottom {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f6f6f6;
  padding-top: 70rpx;
  height: 190rpx;
  overflow-y: hidden;
}

.bottom .save-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 20rpx;
  width: 690rpx;
  height: 102rpx;
  background: var(--themeColor);
  border-radius: 10rpx;
  line-height: 102rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #ffffff;
}