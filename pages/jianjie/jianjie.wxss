/* pages/jianjie/jianjie.wxss */
.jianjie {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.title {
  margin: 10rpx auto;
  font-size: 30rpx;
  border-bottom: 5rpx solid var(--themeColor);
  color: var(--themeColor);
}

.jianjie .content {
  box-shadow: 0rpx 0rpx 3rpx 2rpx rgba(0, 0, 0, 0.2);
  margin: 10rpx 30rpx;
}

.jianjietupian {
  margin-top: 20rpx;
  width: 30%;
  border: solid var(--themeColor) 2rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.toolbar{
  margin: 30rpx 30rpx;
}
.toolbar button{
  margin: 30rpx;
  font-weight: normal;
  background-color: var(--themeColor);
}