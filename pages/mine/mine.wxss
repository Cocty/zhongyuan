page {
  background-color: #edece8;
}

.denglu {
  background-color: rgba(18, 150, 219, 0.3);
  height: 50vh;
  overflow: hidden;
  position: relative;
  border-radius: 20rpx;
}

.denglu .user_image_wrap {
  overflow: hidden;
  position: relative;
}

.denglu .user_image_wrap .usr_bg {
  width: 100%;
  height: 100vh;
  filter: blur(10rpx);
}

.denglu .user_image_wrap .usr_info {
  position: absolute;
  top: 10%;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}

.denglu .user_image_wrap .usr_info .usr_icon {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.denglu .user_image_wrap .usr_info .usr_name {
  margin: 20rpx;
  font-size: large;
  color: white;
}

.denglu .uset_btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%);
}

.notes {
  border-radius: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  margin: 30rpx 30rpx;
}

.notes .notes_title {
  font-size: large;
  font-weight: 600;
  text-align: center;
  padding-bottom: 30rpx;
}

.notes .notes_pale {
  margin-top: 50rpx;
}

.toolbar {
  border-radius: 10rpx;
  background-color: #fff;
  margin: 40rpx 30rpx;
  text-align: center;
}

.toolbar view button {
  border-bottom: 1px solid #ccc;
  font-weight: normal;
  background-color: #fff;
  padding: 20rpx 0;
  width: 100%;
}
